        def __init__(self):
            MainWindow.setObjectName("MainWindow")
            MainWindow.resize(1600, 850)
            self.centralWidget = QtWidgets.QWidget(MainWindow)
            self.paintingLabel = QtWidgets.QLabel(self.centralWidget)
            self.timeLabel = QtWidgets.QLabel(self.centralWidget)
            self.secLabel = QtWidgets.QLabel(self.centralWidget)

            self.timer5 = QTimer()
            self.timer5.timeout.connect(self.Gallery)
            self.timer5.start(55000)  # update every 55 seconds
            self.Gallery()

            self.timer9 = QTimer()
            self.timer9.timeout.connect(self.Time)
            self.timer9.start(1000)  # seconds
            self.Time()

        def setupUi(self, MainWindow):
            self.centralWidget.setObjectName("centralWidget")
