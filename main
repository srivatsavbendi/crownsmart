        def showTime(self):
            _translate = QtCore.QCoreApplication.translate
            currentTime = QTime.currentTime()
            currentDate = QDate.currentDate()
            time1 = currentTime.toString('hh:mm  ap')
            sec1 = currentTime.toString('ss')
            
            self.rectangleLabel.setPixmap(QtGui.QPixmap("/home/pi/Desktop/Assets/whiteline.PNG"))

            self.timeLabel.setText(_translate("MainWindow", time1))
            self.secLabel.setText(_translate("MainWindow", sec1))
            date1 = currentDate.toString(Qt.DefaultLocaleLongDate)
            self.dateLabel.setText(_translate("MainWindow", date1))

            date = datetime.now().timetuple().tm_yday

            holidays = {'1': "New Year's Day [1/1]"
                , '20': "Martin Luther King Jr. Day [1/20]"
                , '33': "Ground Hog Day [2/2]"
                , '45': "Valentine's Day [2/14]"
                , '49': "Washington's Birthday [2/18]"
                , '68': "Daylight Savings Time Starts [3/8]"
                , '77': "St.Patrick's Day [3/17]"
                , '101': "Good Friday [4/10]"
                , '103': "Easter Sunday [4/12]"
                , '131': "Mother's Day [5/10]"
                , '148': "Memorial Day [5/27]"
                , '173': "Father's Day [6/21]"
                , '186': "Independence Day [7/4]"
                , '251': "Labor Day [9/7]"
                , '288': "Columbus Day [10/12]"
                , '305': "Halloween [10/31]"
                , '308': "Election Day [11/3]"
                , '316': "Veterans Day [11/11]"
                , '332': "Black Friday [11/27]"
                , '333': "Thanksgiving [11/28]"
                , '360': "Christmas Day [12/25]"}

            date1 = 1 - date
            date2 = 20 - date
            date3 = 33 - date
            date4 = 45 - date
            date5 = 49 - date
            date6 = 68 - date
            date7 = 77 - date
            date8 = 101 - date
            date9 = 103 - date
            date10 = 131 - date
            date11 = 148 - date
            date12 = 173 - date
            date13 = 186 - date
            date14 = 251 - date
            date15 = 288 - date
            date16 = 305 - date
            date17 = 308 - date
            date18 = 316 - date
            date19 = 332 - date
            date20 = 333 - date
            date21 = 360 - date

            timeuntil = [date1, date2, date3, date4, date5, date6, date7, date8, date9, date10, date11, date12,
                         date13, date14, date15, date16, date17, date18, date19, date20, date21]

            timeuntil.sort()
            abc = []
            for i in timeuntil:
                if i > 0:
                    x = date + i
                    y = str(x)
                    z = holidays[y]

                    for y in range(1):
                        abc.append(z)

            abc1 = abc[0]
            abc2 = abc[1]
            abc3 = abc[2]
            abc4 = abc[3]
            abc5 = abc[4]

            self.holidayTLabel.setText(_translate("MainWindow", "Upcoming Holidays"))
            self.holiday1Label.setText(_translate("MainWindow", abc1))
            self.holiday2Label.setText(_translate("MainWindow", abc2))
            self.holiday3Label.setText(_translate("MainWindow", abc3))
            self.holiday4Label.setText(_translate("MainWindow", abc4))
            self.holiday5Label.setText(_translate("MainWindow", abc5))

