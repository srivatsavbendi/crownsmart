        def showTwitter(self):
            _translate = QtCore.QCoreApplication.translate

            from firebase import firebase
            firebaseInfo = firebase.FirebaseApplication("")
            trendName1 = firebaseInfo.get('/Twitter/trendName1/', "")
            trendName2 = firebaseInfo.get('/Twitter/trendName2/', "")
            trendName3 = firebaseInfo.get('/Twitter/trendName3/', "")
            trendName4 = firebaseInfo.get('/Twitter/trendName4/', "")
            trendName5 = firebaseInfo.get('/Twitter/trendName5/', "")

            self.trend1Label.setText(_translate("MainWindow", trendName1))
            self.trend2Label.setText(_translate("MainWindow", trendName2))
            self.trend3Label.setText(_translate("MainWindow", trendName3))
            self.trend4Label.setText(_translate("MainWindow", trendName4))
            self.trend5Label.setText(_translate("MainWindow", trendName5))
            self.twitterLabel.setText(_translate("MainWindow", "Twitter Trends"))


