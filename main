        def Gallery(self):
            self.yex = random.randrange(0, 23)

            _translate = QtCore.QCoreApplication.translate
            paintingNumber = str(self.yex)

            self.paintingLabel.setPixmap(QtGui.QPixmap("/home/pi/Desktop/Assets/Slideshow/" + paintingNumber + ".jpg"))
            # self.paintingLabel.setPixmap(QtGui.QPixmap("/home/pi/Desktop//home/pi/Desktop/Assets/Paintings/three"))
            self.paintingLabel.setScaledContents(True)
            self.paintingLabel.setEnabled(True)

        def Time(self):
            _translate = QtCore.QCoreApplication.translate
            currentTime = QTime.currentTime()
            currentDate = QDate.currentDate()
            time1 = currentTime.toString('hh:mm  ap')
            sec1 = currentTime.toString('ss')

            self.timeLabel.setText(_translate("MainWindow", time1))
            self.secLabel.setText(_translate("MainWindow", sec1))

